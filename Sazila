  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    function openDemo(e,url){e.preventDefault();alert('Open the demo or source in a new tab: '+url);window.open(url,'_blank')}

    function copyEmail(){navigator.clipboard?.writeText('mzilasade@gmail.com').then(()=>alert('Email copied'))}

    function downloadResume(){
      // simple demo resume download (data URI)
      const resume = `Name: Sade Mzila\nRole: Software Developer\nSkills: JavaScript, React, Node.js`;
      const blob = new Blob([resume],{type:'text/plain'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');a.href = url;a.download = 'Sade Mzila_Resume.txt';document.body.appendChild(a);a.click();a.remove();URL.revokeObjectURL(url);
    }

    function submitForm(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const message = document.getElementById('message').value.trim();
      const status = document.getElementById('formStatus');
      if(!name||!message){status.textContent='Please fill all fields';return}
      // For an actual site, hook this to a serverless endpoint or email service.
      status.textContent='Thanks — message simulated as sent (open‑book exam demo).';
      document.getElementById('contactForm').reset();
    }
  </script>
